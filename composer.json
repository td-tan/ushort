{
    "name": "td-tan/ushort",
    "description": "Simple url shortener",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "illuminate/database": "^8.23.1",
        "robmorgan/phinx": "^0.12.4",
        "symfony/dotenv": "^5.2.1",
        "eftec/bladeone": "^3.49.1",
        "firebase/php-jwt": "^5.2.0"
    },
    "scripts": {
        "test:coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --color=always --coverage-clover=\"reports/code-coverage/clover.xml\""
          ],
        "test:coverage-html": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --color=always --coverage-html=\"reports/code-coverage\""
        ]
    }
}